{
  "name": "create-gfx",
  "description": "Set up a Web graphics project blazingly fast!",
  "version": "0.4.0",
  "author": "Lo√Øc Chen <ming.crepuscular@gmail.com>",
  "homepage": "https://github.com/painfulexistence/create-gfx",
  "repository": {
    "type": "git",
    "url": "git@github.com:painfulexistence/create-gfx.git"
  },
  "keywords": [
    "webgl",
    "webgpu",
    "pixi",
    "three",
    "babylon",
    "p5",
    "motion-canvas"
  ],
  "bin": "dist/cli.js",
  "files": ["dist", "templates"],
  "scripts": {
    "prepare": "husky",
    "dev": "tsup src/cli.ts --watch",
    "build": "tsup src/cli.ts --minify",
    "clean": "shx rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build",
    "release": "release-it"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.0",
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/node": "^17.0.29",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "release-it": "^17.2.0",
    "shx": "^0.3.4",
    "tsup": "^5.12.1",
    "typescript": "^4.6.3"
  },
  "license": "MIT",
  "dependencies": {
    "create-create-x": "^0.1.0"
  }
}
